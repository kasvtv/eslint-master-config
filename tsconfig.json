{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": false,
    "checkJs": true,
    "strict": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "module": "ES6",
    "esModuleInterop": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitUseStrict": true,
    "outDir": "dist",
    "baseUrl": "src",
    "types": ["node", "jest"],
    "paths": {
      "@modules/*": ["modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.test.js", "src/**/*.test.jsx"],
  "typeAcquisition": { "enable": true }
}
