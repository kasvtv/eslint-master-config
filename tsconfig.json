{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": false,
    "checkJs": true,
    "strict": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitUseStrict": true,
    "esModuleInterop": true,
    "module": "ES6",
    "target": "es2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"],
  "typeAcquisition": { "enable": true }
}
